# IP bilgi gÃ¶sterme fonksiyonu
function bilgi_goster {
    ip="$1"
    echo ""
    echo "[!] Bilgiler alÄ±nÄ±yor..."
    data=$(curl -s ipinfo.io/$ip)

    city=$(echo "$data" | grep '"city"' | cut -d '"' -f4)
    region=$(echo "$data" | grep '"region"' | cut -d '"' -f4)
    country=$(echo "$data" | grep '"country"' | cut -d '"' -f4)
    loc=$(echo "$data" | grep '"loc"' | cut -d '"' -f4)

    echo ""
    echo "â•­â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ IP BÄ°LGÄ°SÄ° â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â•®"
    echo "â”‚  IP           : $ip"
    echo "â”‚  Ãœlke         : $country"
    echo "â”‚  Åehir        : $city"
    echo "â”‚  BÃ¶lge        : $region"
    echo "â”‚  Koordinat    : $loc"
    echo "â”‚  Google Maps  : https://maps.google.com?q=$loc"
    echo "â•°â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â•¯"
}

# KullanÄ±cÄ± giriÅŸi dÃ¶ngÃ¼sÃ¼
while true; do
    echo ""
    read -p "ğŸ” IP adresi ya da komut (GTX-M / GTX-MN): " girdi

    if [[ "$girdi" == "GTX-M" ]]; then
        ip=$(curl -s ifconfig.me)
        bilgi_goster $ip
    elif [[ "$girdi" == "GTX-MN" ]]; then
        kullanici_kilavuzu
    elif [[ "$girdi" =~ ^[0-9]+\.[0-9]+\.[0-9]+\.[0-9]+$ ]]; then
        bilgi_goster $girdi
    else
        echo "[!] GeÃ§ersiz giriÅŸ. LÃ¼tfen doÄŸru IP ya da komut girin."
    fi
done